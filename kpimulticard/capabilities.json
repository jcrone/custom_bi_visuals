{
    "dataRoles": [
        {
            "displayName": "KPI Name",
            "name": "kpiName",
            "kind": "Grouping",
            "description": "Label for each KPI"
        },
        {
            "displayName": "Value",
            "name": "value",
            "kind": "Measure",
            "description": "The KPI number for each row"
        },
        {
            "displayName": "Target",
            "name": "target",
            "kind": "Measure",
            "description": "Target/comparison value per KPI"
        }
    ],
    "objects": {
        "card": {
            "properties": {
                "valueColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "decimalPlaces": {
                    "type": { "numeric": true }
                },
                "displayUnits": {
                    "type": {
                        "enumeration": [
                            { "value": "1", "displayName": "None" },
                            { "value": "1000", "displayName": "Thousands" },
                            { "value": "1000000", "displayName": "Millions" },
                            { "value": "0", "displayName": "Auto" }
                        ]
                    }
                },
                "columns": {
                    "type": { "numeric": true }
                }
            }
        },
        "variance": {
            "properties": {
                "showVariance": {
                    "type": { "bool": true }
                },
                "positiveColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "negativeColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "kpiName": { "max": 1 },
                    "value": { "max": 1 },
                    "target": { "max": 1 }
                }
            ],
            "categorical": {
                "categories": {
                    "for": { "in": "kpiName" },
                    "dataReductionAlgorithm": { "top": { "count": 100 } }
                },
                "values": {
                    "select": [
                        { "bind": { "to": "value" } },
                        { "bind": { "to": "target" } }
                    ]
                }
            }
        }
    ],
    "privileges": []
}
